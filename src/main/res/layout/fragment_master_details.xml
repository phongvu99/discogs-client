<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/master_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/delicate"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".album.MasterDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:focusedByDefault="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/details_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingTop="24dp"
            android:paddingEnd="12dp"
            android:paddingBottom="24dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/master_released"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/released"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/master_formats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/formats"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/master_labels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/master_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/master_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/artist"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/master_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/genre"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/master_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/style"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/master_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/year"
                android:textColor="@color/white"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/show_all"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_all0"
            android:visibility="invisible">

        </TextView>

        <TextView
            android:id="@+id/tracklist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/track_list"
            android:textAlignment="center"
            android:textSize="24sp"
            android:visibility="invisible" />

        <FrameLayout
            android:id="@+id/parent_label_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <include layout="@layout/label_sp">

            </include>

        </FrameLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_members"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:background="@color/light_black"
            android:visibility="gone">

        </androidx.recyclerview.widget.RecyclerView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_tracklist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:visibility="invisible">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/tracklist_total_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/total_length"
            android:textAlignment="center"
            android:textSize="24sp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/more_by_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_weight="2"
                android:text="@string/more_by"
                android:textAlignment="center"
                android:textSize="24sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/more_by_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:text="@string/view_all"
                android:textAlignment="center"
                android:textSize="24sp"
                android:visibility="visible" />
        </LinearLayout>


        <TextView
            android:id="@+id/card_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@string/no_item"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header"
            android:textSize="24sp"
            android:visibility="gone">

        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_moreby"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_black"
            android:paddingTop="12dp"
            android:visibility="visible">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>