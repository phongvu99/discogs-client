<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color_market_buy"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".sell.SellMusicFragment">

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/order"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="170dp"
                android:layout_height="230dp"
                android:layout_margin="5dp"
                android:background="@drawable/gradient_color_cart"
                android:text="@string/orders"
                android:textColor="@color/white"
                android:textSize="21sp" />

            <Button
                android:id="@+id/offer"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="170dp"
                android:layout_height="230dp"
                android:layout_margin="5dp"
                android:background="@drawable/gradient_color_purchases"
                android:text="@string/offers"
                android:textColor="@color/white"
                android:textSize="21sp" />
        </LinearLayout>

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/inventory"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="350dp"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:background="@drawable/gradient_color_dw"
                android:text="@string/inventory"
                android:textColor="@color/white"
                android:textSize="21sp" />
        </LinearLayout>

</LinearLayout>
