<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".profile.ProfileFragment">

<!--    <ImageView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="center_horizontal"-->
<!--        android:src="@drawable/background"-->
<!--        android:contentDescription="@string/description" />-->

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/lemon"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Fake name"
        android:textSize="40sp" />


    <TextView
        android:id="@+id/textView10"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/val"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/minimum" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:text="@string/median" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:text="@string/maximum" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/list"
            android:contentDescription="@string/lemon" />

        <Button
            android:id="@+id/button"
            android:layout_marginStart="20dp"
            android:layout_width="352dp"
            android:layout_height="20dp"
            android:background="#FFFFFF"
            android:text="@string/lists"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/lemon"
            android:src="@drawable/purchases" />

        <Button
            android:id="@+id/button2"
            android:layout_width="352dp"
            android:layout_height="20dp"
            android:background="#FFFFFF"
            android:layout_marginStart="20dp"
            android:text="@string/purchases"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/lemon"
            android:src="@drawable/purchase" />

        <Button
            android:id="@+id/button3"
            android:layout_width="352dp"
            android:layout_height="20dp"
            android:background="#FFFFFF"
            android:text="@string/orders"
            android:layout_marginStart="20dp"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/contribution"
            android:contentDescription="@string/lemon" />

        <Button
            android:id="@+id/button4"
            android:layout_width="352dp"
            android:layout_height="20dp"
            android:background="#FFFFFF"
            android:text="@string/contributions"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:layout_marginStart="20dp" />

    </LinearLayout>


</LinearLayout>
