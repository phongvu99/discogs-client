<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        app:iconSpaceReserved="false"
        app:key="privacy_policy"
        app:title="@string/privacy_policy">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="https://support.discogs.com/hc/en-us/articles/360009334513-Privacy-Policy" />
    </Preference>

    <Preference
        app:iconSpaceReserved="false"
        app:key="term_of_service"
        app:title="@string/term_of_service">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="https://support.discogs.com/hc/en-us/articles/360009334333-Terms-of-Service" />
    </Preference>

</PreferenceScreen>
